    <line x_offset="180.12" y_offset="37.68" spacing="0.0">O exp(
&#x3B2;&#x1EB; )</line>
    <line x_offset="188.4" y_offset="36.73" spacing="-7.02">i</line>
    <line x_offset="234.24" y_offset="36.73" spacing="-7.97">i</line>
    <line x_offset="118.68" y_offset="30.36" spacing="-4.53">&lt; O &gt;
=</line>
    <line x_offset="214.56" y_offset="29.93"
spacing="-18.23">&#x2212;</line>
    <line x_offset="150.36" y_offset="29.41" spacing="-7.45">1</line>
    <line x_offset="167.76" y_offset="24.59" spacing="-19.07">(</line>
    <line x_offset="186.96" y_offset="22.8" spacing="-9.12">exp(
&#x3B2;&#x1EB; )</line>
    <line x_offset="227.4" y_offset="21.85" spacing="-7.02">i</line>
    <line x_offset="207.72" y_offset="15.05"
spacing="-11.85">&#x2212;</line>
    <line x_offset="174.6" y_offset="9.71" spacing="-18.55">(</line>
    <line x_offset="0.0" y_offset="0.0" spacing="-1.2">using the general
rule of the importance sampling [1]</line>
